@model Feedback
@{

}
<section class="trip_section layout_padding" id="bookTrip">
    <div class="container">
        <div class="box container-bg">
            <div class="img-box">
                <img src="images/form-img.png" alt="">
            </div>
            <div class="form_container">
                <form asp-controller="Feedback" asp-action="editFeedback" method="post">
                    <div class="form-group">
                        <h3>Rate us</h3>
                        <div class="input-group">
                            <div class="input-group-prepend" style="width:100%">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <img src="images/location.png" alt="">
                                    </div>
                                </div>
                                <select class="form-control" id="rating" asp-for="Rate" required>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <img src="images/location.png" alt="">
                                </div>
                            </div>
                            <textarea rows="3" class="form-control" id="description" asp-for="feedback_details" placeholder="write you feedback" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <select asp-for="FlightId" class="form-control" asp-items="ViewBag.FlightList">
                                <option value="">Select a flight</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary align-content-center">Update</button>
                </form>
            </div>
        </div>
    </div>
</section>