@model Package

@{
    ViewData["Title"] = "Add Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <h2 class="text-white">@ViewData["Title"]</h2>

    <form asp-action="AddPackage" method="post">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <select asp-for="FlightId" class="form-control" asp-items="ViewBag.Flights"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Package_details" class="control-label text-white">Package Details</label>
            <input asp-for="Package_details" class="form-control" />
            <span asp-validation-for="Package_details" class="text-white"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label text-white">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-white"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Package</button>
    </form>
</div>