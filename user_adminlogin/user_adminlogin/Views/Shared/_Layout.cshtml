</head>
<body>
    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container pt-3 " style=" justify-content:space-between">
                    <a class="navbar-brand" href="#">
                        <span>
                            TraveL-LEB
                        </span>
                    </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link " asp-controller="Home" asp-action="Index">Home</a>
                                    <span class="sr-only">(current)</span>
                                </li>
                                @if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-controller="Booktrip" asp-action="Index"> Book Trip</a>
                                    </li>
                                }
                                @if (User.IsInRole("User"))
                                {

                                    <li class="nav-item">
                                        <a class="nav-link " asp-controller="Package" asp-action="Index">Package</a>
                                    </li>
                                }
                                @if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-controller="feedback" asp-action="Index">Feedback</a>
                                    </li>
                                }
                                @if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-controller="Booktrip" asp-action="bookingList">My Flight</a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-area="" asp-controller="AddFlight" asp-action="Index">Flights</a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item" >
                                        <a class="nav-link " asp-area="" asp-controller="AdminPackage" asp-action="Index">AdminPackage</a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-area="" asp-controller="FlightHistory" asp-action="Index">FlightHistory</a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link " asp-area="" asp-controller="FeedbackHistory" asp-action="Index">FeedbackHistory</a>
                                    </li>
                                }
                            <partial name="_LoginPartial" />
                            </ul>
 
                        </div>

                    </div>
                </nav>
            </div>
        </header>

        <!-- end header section -->
        <!-- slider section -->
        <section class=" slider_section ">
            <div class="container">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="slider_container">
                                <div class="box">
                                    <div class="detail-box">
                                        <h1>
                                            TraveL-LEB
